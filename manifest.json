{
  "manifest_version": 2,
  "name": "Hop Paywalls",
  "version": "1.0",
  "description": "Abra a URL atual com Hop Paywalls",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Abra a URL atual com Hop Paywalls"
  },
  "permissions": ["tabs", "activeTab", "contextMenus"],
  "background": {
    "scripts": ["background.js", "contextMenu.js", "utils.js"],
    "persistent": false
  }
}
